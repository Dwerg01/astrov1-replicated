---
import logos from "../images/framework-logos.png";
import logosSmall from "../images/framework-logos-small.png";
import heroImage from "../images/pexels-andrea-piacquadio-994197.webp";

export interface Props {
    heading?: string;
    text?: string;
    showExtra?: boolean;
}

const {
    heading = "Web Designer,\n Developer\n & \nEcommerce Freelancer",
    text = "I like working on Shopify stores and getting store owners the results they are after",
    showExtra = false,
} = Astro.props as Props;
---

<section class="showcase">
    <div class="showcase-text">
        <h1>{ heading }</h1>
        <p> { text } </p>
    </div>

    <div class="contact-card card">

    </div>

</section>

<style>
    .showcase {
        height: auto;
        margin: auto;
        width: clamp(300px, 100%, 900px);
        background-color: var(--color-secondary);
        background-image: linear-gradient(
            to bottom,
            var(--color-card-bg),
            var(--color-card-bg)
        );
        padding: 30px;
        color: var(--color-primary);
    }

    .showcase-blog {
        min-height: 300px;
    }

    .showcase-text {
        margin: 50px auto;
        width: 100%;
    }

    .showcase h1 {
        font-size: 3rem;
        
        margin-bottom: 20px;
    }

    .showcase p {
        font-size: 24px;
        margin-bottom: 20px;
    }

    .showcase-img {
        text-align: center;
        height: 200px;;
    }

    .showcase-img img {
        border-radius: 10px;
        margin: auto;
    }

    .showcase-demo {
        text-align: center;
        font-weight: 300;
    }
    .contact-card {
        background-color: green;
        height: 20vh;
        border-radius: 2rem;;
    }

</style>
