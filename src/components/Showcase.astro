---


import "./src/styles/index.css";


export interface Props {
    heading?: string;
    text?: string;
    showExtra?: boolean;
}

const {
    heading = "Get your ",
    text = "I am Nardu. I like working on Web Dev projects for clients, to make their value visible online",
    showExtra = false,
} = Astro.props as Props;

---

<section class="showcase outline outline-1 h-full">
    <div class="grid grid-cols-2 gap-2">
        

        <div class="w-2/4 to-blue-500">
            <h1 class="text-4xl">{ heading }</h1>
            <h2 id="word-ticker" class="text-2xl animate-pulse"></h2>
            <p> { text } </p>
        </div>
    </div>

    {showExtra && <>
    <div class="showcase-img">
        <p class="showcase-demo text-right text-sm">
            <small>This is a demo website used for the YouTube crash course</small>
        </p>
    </div>

    </>}
</section>

<script>

    const catchPhrases = document.getElementById("word-ticker");

    const flashwords = ["jou ma", "my ma", "Rose", "Piet Wielietjies"]
    const delay = 1000
    
    setInterval(() => {
        flashwords.forEach((el, i) => {
            setTimeout(() => {
                catchPhrases.textContent = el;
                
            }, i * delay);
        })
    }, flashwords.length * delay);


</script>

