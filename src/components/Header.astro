---
import logo from "../images/image2vector.svg";
---

<header class="header">
    <div class="container">
        <div class="logo">
            <a href="/">
                <img src={logo} alt="" />
            </a>
        </div>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/about">About</a></li>
                <li><a href="/work">Work</a></li>
                <li><a href="/how">How</a></li>
                <li><a href="/blog">Blog</a></li>
            </ul>
        </nav>
    </div>
</header>

<style>
    .header {
        height: 100px;
        /* background: var(--color-main-bg); */
    }

    .header .container {
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0 20px;
    }

    .header img {
        height: 75px;
        vertical-align: middle;
        margin: 15px 5vw;
    }

    .header nav ul {
        display: flex;
    }

    .header nav ul li a {
        padding: clamp(0.1rem, 5vw, 2rem);
        font-size: clamp(1vw, 1.5rem, 3vw);
        z-index: 2;
        font-weight: 700;
        background-image: var(--color-main-bg); 
        background-size: 0% 3px;
        background-repeat: no-repeat;
        background-position: left bottom;
        transition: background-size ease-in-out 300ms;
    }
    .header nav ul li a:hover {
        background-size: 100% 3px;
    }
    .logo {
        width: 100px;
        height: 100px;
    }
</style>
